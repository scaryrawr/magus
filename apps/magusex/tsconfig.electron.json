{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "rootDir": "src/electron",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmit": false,
    "types": [
      "node",
      "electron"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/electron/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
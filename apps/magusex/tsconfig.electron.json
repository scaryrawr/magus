{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src/electron",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmit": false,
    "types": [
      "node",
      "electron"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/electron/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}